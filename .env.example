# Multi Counter Web Application - Environment Configuration
# Copy this file to .env and update the values for your deployment

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-base64-32
FLASK_ENV=production
FLASK_DEBUG=False

# Redis Configuration
# For servers with existing Redis installations, use a different database number
# Database 0 (default): Usually used by existing projects
# Database 1: Multi Counter sessions (recommended for shared servers)
REDIS_URL=redis://localhost:6379/1

# Alternative Redis configurations:
# For dedicated Redis instance: REDIS_URL=redis://localhost:6380/0
# For Redis with password: REDIS_URL=redis://:password@localhost:6379/1
# For Redis Cluster: REDIS_URL=redis://localhost:7000,localhost:7001,localhost:7002/0

# Application Settings
MAX_CONTENT_LENGTH=104857600  # 100MB max file upload
UPLOAD_FOLDER=uploads         # Directory for uploaded videos
SESSION_TIMEOUT=3600          # Session timeout in seconds (1 hour)

# Server Configuration
HOST=127.0.0.1               # Bind to localhost (nginx will proxy)
PORT=8000                    # Gunicorn port (should not conflict with existing services)
WORKERS=4                    # Number of Gunicorn workers (adjust based on CPU cores)

# Video Processing Settings
VIDEO_MAX_DURATION=600       # Maximum video duration in seconds (10 minutes)
VIDEO_MAX_RESOLUTION=1920x1080  # Maximum video resolution
FRAME_RATE_LIMIT=30          # Maximum frame rate for processing

# Logging Configuration
LOG_LEVEL=info               # Logging level: debug, info, warning, error, critical

# Optional: Database Configuration (if using database for persistent storage)
# DATABASE_URL=sqlite:///multi_counter.db
# DATABASE_URL=postgresql://user:password@localhost/multi_counter
# DATABASE_URL=mysql://user:password@localhost/multi_counter

# Optional: External Storage (for large deployments)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=multi-counter-storage
# AWS_REGION=us-east-1

# Optional: Email Configuration (for notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Optional: Monitoring and Analytics
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# GOOGLE_ANALYTICS_ID=GA-XXXX-X

# Development Settings (only for development)
# FLASK_ENV=development
# FLASK_DEBUG=True
# HOST=0.0.0.0
# PORT=5000 